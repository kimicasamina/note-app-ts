{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  // "include": ["src/**/*.ts", "tests/**/*.ts"],
  "include": ["src/**/*.ts", "src/custom.d.ts"],
  "exclude": ["node_modules"]
}
