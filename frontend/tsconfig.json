{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@hooks/*": ["hooks/*"],
      "@features/*": ["features/*"],
      "@context/*": ["context/*"],
      "@services/*": ["services/*"],
      "@api/*": ["api/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "types/**/*"], // Ensure types folder is included
  "exclude": ["node_modules", "dist"]
}
